{
  "name": "monorepo",
  "private": true,
  "@rollingversions/ignore": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspace hooked-on-forms build && yarn workspace demo build",
    "lint": "yarn workspace hooked-on-forms lint && yarn workspace demo lint",
    "prettier:write": "prettier --ignore-path .gitignore --write './**/*.{md,json,yaml,js,jsx,ts,tsx}'",
    "prettier:check": "prettier --ignore-path .gitignore --list-different './**/*.{md,json,yaml,js,jsx,ts,tsx}'",
    "pretest": "yarn workspace hooked-on-forms build",
    "test": "jest"
  },
  "dependencies": {},
  "devDependencies": {
    "@forbeslindesay/tsconfig": "^2.0.0",
    "@types/jest": "^25.2.1",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.3.1",
    "tslint": "^6.1.2",
    "typescript": "^3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/packages/*/src/**/__tests__/**/*.test.ts?(x)"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/*/src/**/*.{ts,tsx}": [
      "prettier --write"
    ],
    "*.{md,json,yaml,js,jsx}": [
      "prettier --write"
    ]
  }
}
